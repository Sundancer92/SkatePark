<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Skate Park - Lista de Participantes</title>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
			integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/styles/estilos.css" />
	</head>
	<body>
		<h1 >Skate Park</h1>

		<div class="py-4">
			<h2 class="text-center">Lista de participantes</h2>

			<hr />
			<div class="container">
				<table class="table table-dark">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Foto</th>
							<th scope="col">Nombre</th>
							<th scope="col">Años de experiencia</th>
							<th scope="col">Especialidad</th>
							<th scope="col">Estado</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th scope="row">1</th>
							<td><div><img src="/img/tony.jpg" alt="FotoTonyHawk"></div></td>
							<td>Tony Hawk</td>
							<td>12</td>
							<td>Kickflip</td>
							<td class="text-success font-weight-bold">Aprobado</td>
						</tr>
						<tr>
							<th scope="row">2</th>
							<td><div><img src="/img/evelien.jpg" alt="FotoEvelien"></div></td>
							<td>Evelien Bouilliart</td>
							<td>10</td>
							<td>Heelflip</td>
							<td class="text-success font-weight-bold">Aprobado</td>
						</tr>
						<tr>
							<th scope="row">3</th>
							<td><div><img src="/img/danny.jpg" alt="FotoDanny"></div></td>
							<td>Danny Way</td>
							<td>8</td>
							<td>Ollie</td>
							<td class="text-warning font-weight-bold">En revisión</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="text-center">
				<a href="/Login">Iniciar Sesión</a>
				|
				<a href="/Registro">Registrarme</a>
			</div>
		</div>
	</body>

	<script>
		const getData = async () => {
			console.log('------ Index GET DATA ------');
			const response = await fetch('/skaters');
			let data = await response.json();
			printSkaters(data)
		}

		const printSkaters = (data) => {
			let tableSkaters = document.getElementsByTagName('tbody')[0];
			tableSkaters.innerHTML = '';

			for (let i = 0; i<data.skaters.length; i++){
				console.log(data.skaters[i]);
				tableSkaters.innerHTML += `
						<tr>
							<th scope="row">${data.skaters[i].id}</th>
							<td><div><img src="/img/${data.skaters[i].foto}" alt="FotoEvelien"></div></td>
							<td>${data.skaters[i].nombre}</td>
							<td>${data.skaters[i].anos_experiencia}</td>
							<td>${data.skaters[i].especialidad}</td>
							<td class="text-success font-weight-bold">${data.skaters[i].estado}</td>
						</tr>
				`
			}

		}
		getData()

	</script>

</html>